<% if @belt.errors.any? %>
  <p>
    <%= t(:errors_finded) %>
    <ul>
      <% @belt.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </p>
<% end %>

<h2><%= t(:edit_belt) %></h2>
<p>
  <%= form_tag(update_belt_path(@belt.id), method: :patch) do %>
    <p><%= label_tag t(:name) %></p>
    <p><%= text_field_tag(:name, @belt.name) %></p>
    <p><%= label_tag t(:image) %></p>
    <p><%= text_field_tag(:image, @belt.image) %></p>
    <p><%= t(:image_explanation) %></p>
    <p><%= label_tag t(:description) %></p>
    <p><%= text_area_tag(:description, @belt.description) %></p>
    <p><%= t(:description_explanation) %></p>
    <p><%= submit_tag t(:save) %></p>
  <% end %>
</p>
<p>
  <%= link_to(t(:back), kata_path(@belt.kata)) %>
</p>

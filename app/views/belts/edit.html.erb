<section id="belts">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <h1 class="mt-5"><%= t(:edit_belt) %></h1>
        <p>
          <%= form_tag(update_belt_path(@belt.id), method: :patch) do %>
            <p><%= label_tag t(:name) %></p>
            <p><%= text_field_tag(:name, nil, class: 'belt-name') %></p>
            <p><%= label_tag t(:image) %></p>
            <p><%= text_field_tag(:image, nil, class: 'belt-image') %></p>
            <p><%= label_tag t(:description) %></p>
            <p><%= text_area_tag(:description, nil, class: 'belt-description') %></p>
            <p><%= submit_tag t(:save) %></p>
          <% end %>
        </p>
        <p>
          <%= link_to(t(:back), kata_path(@belt.kata)) %>
        </p>
      </div>
    </div>
  </div>
</section>

<section id="examples">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <h1 class="mt-5"><%= "#{@kata.title}'s #{t(:examples)}" %></h1>
        <ul>
          <% @examples.each do |example| %>
            <li><%= link_to(example.text, example.url, target: "_blank") %> <%= edit_example(example.id, example.user) %> <%= delete_example(example.id, example.user) %></li>
          <% end %>
        </ul>
        <p>
          <%= form_tag(example_path(@kata.id), method: :post) do %>
            <%= label_tag t(:text) %>
            <%= text_field_tag :text %>
            <%= label_tag t(:url) %>
            <%= text_field_tag :url %>
            <p class="field-explanation">
              <%= t(:url_explanation) %>
            </p>
            <%= submit_tag t(:add_example) %>
          <% end %>
        </p>
        <p>
          <%= link_to(t(:back), kata_path(@kata.id)) %>
        </p>
      </div>
    </div>
  </div>
</section>
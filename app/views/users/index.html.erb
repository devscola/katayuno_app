<section id="users">
  <div class="row">
    <div class="col-lg-8 mx-auto">
      <h2>Users</h2>
      <ul>
        <% @users.each do |user| %>
          <li>
            <%= user.email %> <%= handle_admin(user) %> <%= link_to('Delete', destroy_user_path(user.id), { method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure?"}}) %>
          </li>
        <% end %>
      </ul>
      <p>
        <%= link_to(t(:back), root_path) %>
      </p>
    </div>
  </div>
</section>

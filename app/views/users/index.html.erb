<h2><%= t(:users) %></h2>
<ul>
  <% @users.each do |user| %>
    <li>
      <%= user.email %> <%= handle_admin(user) %> <%= link_to(t(:delete), destroy_user_path(user.id), { method: :delete, data: {confirm: t(:confirm)}}) %>
    </li>
  <% end %>
</ul>
<p>
  <%= link_to(t(:back), root_path) %>
</p>

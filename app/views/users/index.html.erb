<section id="users">
  <div class="row">
    <div class="col-lg-8 mx-auto">
      <h2>Users</h2>
      <ul>
        <% @users.each do |user| %>
          <li>
            <%= user.email %> <%= handle_admin(user) %> <%= link_to('Delete', delete_user_path(user.id), { method: :delete, class: "btn btn-danger"}) %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</section>

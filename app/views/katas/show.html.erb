<section id="kata">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <h1 class="mt-5"><%= @kata.title %></h1>
        <p>
          <p><%= @kata.description.html_safe %></p>
          <p><%= link_to(t(:examples), examples_path(@kata.id)) %></p>
          <p>
            <h2><%= t(:belts) %></h2>
            <% @belts.each do |belt| %>
              <p>
                <table>
                  <tr>
                    <th rowspan="2">
                      <%= image_tag(belt.image, { class: 'belt-resize-image' }) %>
                    </th>
                    <th><%= belt.name %></th>
                  </tr>
                  <tr>
                    <td class="belt-description">
                      <%= belt.description.html_safe %>
                    </td>
                  </tr>
                </table>
                <p>
                  <%= edit_belt_button(belt.id) %>
                  <%= delete_belt_button(belt.id) %>
                </p>
              </p>
            <% end %>
          </p>
          <%= render 'new_belt', note: @belt %>
        </p>
        <p>
          <%= link_to(t(:back), root_path) %>
        </p>
      </div>
    </div>
  </div>
</section>

